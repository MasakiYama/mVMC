%----------------------------------------------------------------
%  chapter layout
%----------------------------------------------------------------
\def\@makechapterhead#1{%
  \vspace*{5\p@}
  {\centering\normalfont%\bfseries
    \ifnum \c@secnumdepth >\m@ne
      \if@mainmatter
        \scalebox{3}{\thechapter}
        \par\nobreak
        \vskip 10\p@ 
      \fi
    \fi
    \interlinepenalty\@M
    \parbox{0.75\textwidth}{\centering\LARGE#1}
        \par\nobreak
        \vskip 5\p@ 
    \hfil\hrule width \columnwidth\hfil
    \vskip 20\p@}%
}
\renewcommand\chaptername{}
%----------------------------------------------------------------
%  header layout
%----------------------------------------------------------------
  \def\chaptermark#1{\markboth{\thechapter \ \ #1}{}}%
  \def\sectionmark#1{\markright{\thesection \ \ #1}}%
%
  \def\@evenhead{\thepage\hfil{\footnotesize\leftmark}\hfil}%
  \def\@oddhead{\hfil{\footnotesize\rightmark}\hfil\thepage}%
%----------------------------------------------------------------
%  copied from indentfirst.sty
%----------------------------------------------------------------
  \let\@afterindentfalse\@afterindenttrue%
  \@afterindenttrue%
%
%
%----------------------------------------------------------------
%  footnote simbol style
%----------------------------------------------------------------
  \def\thefootnote{\ifnum\c@footnote>\z@\leavevmode\lower.5ex\hbox{*}\@arabic\c@footnote\fi}
%----------------------------------------------------------------
%  over/under bracket
%----------------------------------------------------------------
\def\overbracket#1{\mathop{\vbox{\m@th\ialign{##\crcr\noalign{\kern1\p@}%
      \downbracketfill\crcr\noalign{\kern2\p@\nointerlineskip}%
      $\hfil\displaystyle{#1}\hfil$\crcr}}}\limits}
\def\underbracket#1{\mathop{\vtop{\m@th\ialign{##\crcr%
   $\hfil\displaystyle{#1}\hfil$\crcr%
   \noalign{\kern2\p@\nointerlineskip}%
   \upbracketfill\crcr\noalign{\kern1\p@}}}}\limits}
\newlength\@braw
\newlength\@brad
\def\downbracketfill{$\m@th%
  \@braw0.06em%
  \@brad0.3em%
  \vrule\@height\@braw\@depth\@brad\@width\@braw%
  \leaders\vrule \@height\@braw \@depth\z@\hfill%
  \vrule\@height\@braw\@depth\@brad\@width\@braw%
$}
\def\upbracketfill{$\m@th%
  \@braw0.06em%
  \@brad0.3em%
  \vrule\@height\@brad\@depth\@braw\@width\@braw%
  \leaders\vrule \@height\z@ \@depth\@braw\hfill%
  \vrule\@height\@brad\@depth\@braw\@width\@braw%
$}%
