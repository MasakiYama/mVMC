%----------------------------------------------------------------
\def\mytitlepage#1#2#3#4#5{%
  \begin{titlepage}%
    \vspace*{3cm}%
    \begin{center}%
      {\Large #1}\\[+1.5cm]%
      {\Large \bfseries \parbox{14cm}{\centering%
      %title-------------------------------------
      #2%
      %------------------------------------------
      }}\\[+7cm]%
      {\Large%
      %author------------------------------------
      #3%
      %------------------------------------------
      }\\[+1.0cm]%
      {\large\itshape\parbox{14cm}{\centering%
      %affiliation-------------------------------
      #4%
      %------------------------------------------
      }}\\[+2.0cm]%
      {\large% \sffamily%
      %date--------------------------------------
      #5%
      %------------------------------------------
      }%
    \end{center}%
  \end{titlepage}%
}
